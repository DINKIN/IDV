<types>

  <type name="link"  description="Link" >
     <property name="icon" value="/icons/link.png"/>
     <property name="form.show.date" value="false"/>
     <property name="form.show.area" value="false"/>
     <property name="form.show.file" value="false"/>
  </type>


  <type name="wikipage"  description="Wiki Page" handler="ucar.unidata.repository.collab.WikiPageTypeHandler">
     <property name="icon" value="/icons/wiki.gif"/>
     <property name="form.rows.desc" value="50"/>
     <property name="form.show.date" value="false"/>
     <property name="form.show.area" value="false"/>
     <property name="form.show.resource" value="false"/>
     <column name="wikitext" type="clob" size="256000" label="Wiki Text" cansearch="true" showinhtml="false"/>
     <column name="category" type="string"  label="Wiki Page Category" cansearch="true" isindex="true" searchtype="select" showinhtml="false"/>
</type>



  <type name="localfiles"  description="Local File View" handler="ucar.unidata.repository.LocalFileTypeHandler">
     <property name="form.show.resource" value="false"/>
     <property name="form.show.area" value="false"/>
     <property name="form.show.date" value="false"/>
     <column name="localfilepath" group="Look for files here" type="string"     label="Local file path" columns="80"  showinhtml="false"/>
     <column name="timedelay" type="double"  label="Age" suffix="Find files that haven't changed in this time (minutes)"  showinhtml="false"/>
     <column name="includepattern" group="Find files or directories" type="string"     label="Match files with patterns" rows="5" suffix="wildcard or &quot;regexp:pattern&quot;. One per line. e.g.&lt;br&gt;&lt;i&gt;*.nc&lt;br&gt;regexp:model[0-9]\.grb$&lt;br&gt;dir:*data&lt;/i&gt; (To match directories)"  showinhtml="false"/>
     <column name="excludepattern" type="string"     label="Exclude files with patterns" rows="5" suffix="wildcard or &quot;regexp:pattern&quot;. One per line. e.g.&lt;br&gt;&lt;i&gt;*.nc&lt;br&gt;regexp:model[0-9]\.grb$&lt;br&gt;dir:*data&lt;/i&gt; (To match directories)"  showinhtml="false"/>
     <column name="naming"  group="Attributes"       type="string"     label="Naming" rows="5" suffix="pattern:replacement e.g.&lt;br&gt;&lt;i&gt;NAM:North American Model&lt;br&gt;path:GFS:Global Forecast Model&lt;br&gt;&lt;i&gt;"  showinhtml="false"/>
 </type>



  <type name="catalog"  description="Catalog View" handler="ucar.unidata.repository.CatalogTypeHandler">
     <property name="form.show.file" value="false"/>
     <property name="form.show.url" value="true"/>
