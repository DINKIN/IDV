<types>

  <type name="level3radar" description="Level 3 Radar File" handler="ucar.unidata.repository.Level3RadarTypeHandler">
	<column name="station" type="string" isindex="true" cansearch="true" canlist="true" searchtype="select" label="Station" 
                properties="/ucar/unidata/repository/resources/level3radar.station.properties"/>
	<column name="product" type="string" isindex="true" cansearch="true" canlist="true" searchtype="select" label="Product"  
                properties="/ucar/unidata/repository/resources/level3radar.product.properties"/>
  </type>


  <type name="blogpost"  description="Blog Post"  showinform.resource="false"
  showinform.date="false"
  showinform.area="false"/>


  <type name="model"  description="Model">
     <column name="modelgroup" type="string" isindex="true" cansearch="true" searchtype="select" label="Model Group"/>
     <column name="modelrun" type="string" isindex="true" cansearch="true" searchtype="select"  label="Model Run"/>
  </type>



  <type name="level2radar" description="Level 2 Radar File">
	<column name="station" type="string" isindex="true" cansearch="true" searchtype="select" label="Station"
                properties="/ucar/unidata/repository/resources/level3radar.station.properties"/>
  </type>

  <type name="satellite" description="Satellite File">
	<column name="platform" type="string" isindex="true" cansearch="true" searchtype="select" label="Platform"/>
	<column name="resolution" type="string" isindex="true" cansearch="true" searchtype="select"  label="Resolution"/>		
	<column name="product" type="string" isindex="true" cansearch="true" searchtype="select"  label="Product"/>
  </type>

  <type name="image"  description="Image File"/>


  <type name="testit" description="Test it">
	<column name="fruit" type="enumeration"  values="Apple,Banana,Orange" label="Fruit" isindex="true" cansearch="true" canlist="true" />
	<column name="flag" type="boolean"  label="Flag"  isindex="true" cansearch="true" />
	<column name="number" type="double" cansearch="true" suffix="number units"/>
  </type>

  <type name="testit2" description="Test it2">
	<column name="gcmd" type="enumeration"  values="file:/ucar/unidata/repository/resources/gcmdkeywords.txt" label="Gcmd Keyword" isindex="true" cansearch="true" canlist="true" />
  </type>




</types>