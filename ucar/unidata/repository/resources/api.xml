<api>

  <property name="admin" value="false"/>
  <property name="cancache" value="true"/>

  <group handler="repository">
     <api request="/help/*"           method="processHelp"/>
     <api request="/ping"             method="processPing"/>
  </group>

  <group handler="entrymanager">
      <api request="/entry/show"             method="processEntryShow"    name="${topgroup}" toplevel="true" ishome="true"/>
      <api request="/entry/show/*"           method="processEntryShow"/>
      <api request="/entry/form"             method="processEntryForm"       actions="edit"/>
      <api request="/entry/change"           method="processEntryChange"     actions="edit"/>
      <api request="/entry/delete"           method="processEntryDelete"     actions="edit"/>
      <api request="/entry/deletelist"       method="processEntryListDelete" actions="edit"/>
      <api request="/entry/new"              method="processEntryNew"        actions="new"/>
      <api request="/entry/upload"           method="processEntryUpload"        actions="upload"/>
      <api request="/entry/get/*"            method="processEntryGet"      cancache="false"/>
      <api request="/entry/getentries"       method="processGetEntries" />
      <api request="/entry/copy"             method="processEntryCopy"/>
      <api request="/entry/xmlcreate"        method="processEntryXmlCreate"/>
      <api request="/entry/comments/show"    method="processCommentsShow"/>
      <api request="/entry/comments/add"     method="processCommentsAdd"      actions="comment"/>
      <api request="/entry/comments/edit"    method="processCommentsEdit"     actions="edit"/>
      <api request="/association/add"        method="processAssociationAdd"/>
      <api request="/association/delete"     method="processAssociationDelete"   actions="edit"/>
      <api request="/catalog"                method="processCatalog"/>
  </group>



  <group handler="searchmanager">
      <api request="/search/textform"        method="processEntryTextSearchForm"     name="Search" toplevel="true"/>
      <api request="/search/form"            method="processEntrySearchForm"         name="Search"/>
      <api request="/search/browse"          method="processEntryBrowseSearchForm"   name="Browse"/>
      <api request="/search/do"              method="processEntrySearch"/>
   </group>

  <group handler="graphmanager">
      <api request="/graph/get"              method="processGraphGet"/>
  </group>

  <group handler="repository">
      <api request="/message"                method="processMessage"    cancache="false" />
      <api request="/dummy"                  method="processDummy"/>
  </group>

  <group handler="accessmanager">
      <api request="/access/form"       method="processAccessForm"      actions="edit"/>
      <api request="/access/change"     method="processAccessChange"    actions="edit"/>
  </group>


  <group handler="metadatamanager">
      <api request="/metadata/list"       method="processMetadataList"/>
      <api request="/metadata/view"       method="processMetadataView"/>
      <api request="/metadata/form"       method="processMetadataForm"       actions="edit"/>
      <api request="/metadata/addform"    method="processMetadataAddForm"    actions="edit"/>
      <api request="/metadata/add"        method="processMetadataAdd"        actions="edit"/>
      <api request="/metadata/change"     method="processMetadataChange"     actions="edit"/>
  </group>
 

  <api  handler="actionmanager" request="/status"      method="processStatus"    cancache="false" />

  <property name="cancache" value="false"/>

  <group handler="usermanager">
      <api request="/user/login"    method="processLogin"    admin="false"/>
      <api request="/user/logout"   method="processLogout"   admin="false"/>
      <api request="/user/home"     method="processHome"     admin="false"/>
      <api request="/user/profile"     method="processProfile"     admin="false"/>
      <api request="/user/settings" method="processSettings" admin="false"/>
      <api request="/user/activity"      method="processActivityLog"      admin="true"/>
      <api request="/user/cart"     method="processCart"     admin="false"/>
      <api request="/user/resetpassword"      method="processResetPassword"    admin="false"/>
      <api request="/user/finduserid"      method="processFindUserId"    admin="false"/>
      <api request="/user/list"     method="adminUserList"   admin="true"/>
      <api request="/user/edit"     method="adminUserEdit"   admin="true"/>
      <api request="/user/new"      method="adminUserNew"    admin="true"/>
      <api request="/user/favorite"      method="processFavorite" />
  </group>

  <group handler="admin">
      <api request="/admin/usermessage"     method="adminUserMessage"      admin="true"/>
      <api request="/admin/sql"          method="adminSql"           admin="true"/>
      <api request="/admin/log"          method="adminLog"           admin="true"/>
      <api request="/admin/startstop"    method="adminDbStartStop"   admin="true"/>
      <api request="/admin/settings"     method="adminSettings"      admin="true" name="Admin" toplevel="true"/>
      <api request="/admin/settings/do"  method="adminSettingsDo"    admin="true"/>
      <api request="/admin/tables"       method="adminDbTables"      admin="true"/>
      <api request="/admin/dumpdb"       method="adminDbDump"        admin="true"/>
      <api request="/admin/actions"      method="adminActions"       admin="true"/>
      <api request="/admin/stats"        method="adminStats"         admin="true"/>
      <api request="/admin/access"       method="adminAccess"         admin="true"/>
      <api request="/admin/cleanup"      method="adminCleanup"       admin="true"/>
      <api request="/admin/scan"         method="adminScanForBadParents" admin="true"/>
  </group>

  <group handler="harvestermanager">
      <api request="/harvester/processfile"    method="processFile"           admin="true" cancache="false"/>
      <api request="/harvester/list"           method="processList"           admin="true" />
      <api request="/harvester/importcatalog"  method="processImportCatalog"  admin="true" />
      <api request="/harvester/new"            method="processNew"            admin="true" />
      <api request="/harvester/edit/*"           method="processEdit"           admin="true" />
  </group>
</api>
