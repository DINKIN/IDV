<?xml version="1.0" encoding="ISO-8859-1"?>
<metadata>

  <handler class="ucar.unidata.repository.data.ThreddsMetadataHandler" category="THREDDS">

    <type name="Project" type="thredds.project"  searchable="true" browsable="true">
      <element name="Value" />
      <template type="thredds"><![CDATA[<project>${Value}</project>]]></template>
      <template type="dif"><![CDATA[ <Project><Short_Name></Short_Name><Long_Name>${Value}</Long_Name></Project>]]></template>
    </type>

    <type name="Keyword" type="thredds.keyword"  searchable="true" browsable="true">
      <element name="Value" />
      <template type="thredds"><![CDATA[<keyword>${Value}</keyword>]]></template>

    </type>


    <type name="Link" type="thredds.link">
      <element name="Label" />
      <element name="URL" datatype="url"/>
      <template type="html"><![CDATA[<a href="${URL}">${Label}</a>]]></template>
      <template type="thredds"><![CDATA[<documentation xlink:href="${URL}" xlink:title="${Label}"/>]]></template>
      <template type="dif"><![CDATA[<Related_URL><URL_Content_Type><Type>GET</Type></URL_Content_Type>
   <URL>${URL}</URL>
   <Description>${Label}</Description></Related_URL>]]></template>
    </type>


    <type name="Creator" type="thredds.creator" searchable="true" browsable="true">
      <element name="Organization" />
      <element name="" datatype="skip"/>
      <element name="Email" datatype="email"/>
      <element name="URL" datatype="url"/>
    </type>

    <type name="Publisher" type="thredds.publisher"  searchable="true" browsable="true">
      <element name="Organization" />
      <element name="" datatype="skip"/>
      <element name="Email" datatype="email"/>
      <element name="URL" datatype="url"/>
      <template type="thredds"><![CDATA[<publisher><name role="${attr2}">${Organization}</name>
 <contact email="${Email}" url="${URL}"/></publisher>]]></template>
    </type>


    <type name="Contributor" type="thredds.contributor"  searchable="true" browsable="true">
      <element name="Name" />
      <element name="Role" />
      <template type="thredds"><![CDATA[<contributor role="${Role}">${Name}</contributor>]]></template>
    </type>

    <type name="Property" type="thredds.property"  searchable="true" browsable="true">
      <element name="Name"  searchable="true"/>
      <element name="Value"  searchable="true"/>
      <template type="thredds"><![CDATA[<property name="${Name}" value="${Value}"/>]]></template>
      <template type="html"><![CDATA[ ${Name}=${Value}]]></template>
    </type>

    <type name="Documentation" type="thredds.documentation"  searchable="true">
      <element
         name="Type"
         datatype="enumeration"
         values="summary:Summary,funding:Funding,history:History,language:Language,processing_level:Processing Level,rights:Access Rights"/>
      <element
         name="Value"
         rows="6"
         />
      <template type="thredds"><![CDATA[<documentation type="${Type}">${Value.cdata}</documentation>]]></template>
      <template type="dif"><![CDATA[<Summary>${Value.cdata}</Summary>]]></template>
    </type>

    <type name="Dataformat" type="thredds.dataFormat">
      <element name="Value" />
      <template type="thredds"><![CDATA[<dataFormat>${Value}</dataFormat>]]></template>
    </type>

    <type name="Datatype" type="thredds.dataType">
      <element name="Value" />
      <template type="thredds"><![CDATA[<dataType>${Value}</dataType>]]></template>
    </type>

    <type name="Authority" type="thredds.authority">
      <element name="Value" />
      <template type="thredds"><![CDATA[<authority>${Value}</authority>]]></template>
    </type>

    <type
       displaycategory="Variables"
       name="Variable"
       type="thredds.variable" searchable="true">
      <template type="html"><![CDATA[${Variable} (${Units}) ${Long_Name}]]></template>
      <element name="Variable" />
      <element name="Long Name" />
      <element
         columns="10"
         name="Units"
         />
    </type>

    <type name="Icon" type="thredds.icon">
      <element name="URL" datatype="url"/>
      <template type="thredds"><![CDATA[<documentation xlink:href="${URL}" xlink:title="icon"/>]]></template>
    </type>
  </handler>

</metadata>
